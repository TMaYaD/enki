<% content_for(:page_title) do %><%=h posts_title(@tag) %><% end -%>
<% content_for(:head)       do %><%= auto_discovery_link_tag(:atom, formatted_posts_path(:tag => @tag, :format => 'atom')) %><% end -%>

<div id="primary" class="twocol-stories">
  <div class="inside">
    <% if @posts.empty? -%>
      <h2 class="center">Not Found</h2>
      <p class="center">Sorry, but you are looking for something that isn't here.</p>
      <%# TODO: search logic %>
    <% else -%>
      <% @posts.each_with_index do |post,index| # We show full views for only two posts -%>
	<div class="story <%= 'first' if index==0 %>">
	  <%= render :partial => 'post', :locals => {:post => post} %>
	</div>
      <% end -%>
    <% end -%>

    <div class="clear"></div>
  </div>
</div> <!-- [END] #primary -->
